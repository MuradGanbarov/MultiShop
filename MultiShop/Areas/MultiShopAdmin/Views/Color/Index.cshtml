
@model PaginationVM<Color>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Color Table</h4>
                <a asp-controller="color" asp-action="create" class="btn btn-success">Create New Color</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>

                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Color color in Model.Items)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @color.Name
                                    </td>
                                    <td>
                                        @color.ProductColors.Count
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-controller="color" asp-route-id="@color.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-controller="color" asp-route-id="@color.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="details" asp-controller="color" asp-route-id="@color.Id" class="btn btn-success btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                    <td>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                            <li class="page-item @(Model.CurrentPage-1<=0?"disabled":"")">
                                <a class="page-link" asp-route-page="@(Model.CurrentPage-2)" asp-action="Index" asp-controller="color">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPage; i++)
                            {
                                <li class="page-item @(i==Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i-1)" asp-action="Index" asp-controller="color">@i</a></li>
                            }
                            <li class="page-item @(Model.CurrentPage==Model.TotalPage?"disabled":"")">
                                <a class="page-link" asp-route-page="@(Model.CurrentPage)" asp-action="Index" asp-controller="color">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
